<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <title>Login Page</title>
  </head>
  <body>
    <section class="mt-5 container">
      <h1 class="">Login Page</h1>

      <form action="/login" method="post">
        <div class="mb-3 mt-4">
          <label for="exampleInputEmail1" class="form-label"
            ><span class="fs-5">Username</span></label
          >
          <input
            type="text"
            class="form-control w-50"
            name="username"
            id="username"
          />
          <div id="emailHelp" class="form-text"></div>
        </div>
        <div class="mb-3">
          <label for="exampleInputPassword1" class="form-label"
            ><span class="fs-5">Password</span></label
          >
          <input
            type="password"
            class="form-control w-50"
            name="password"
            id="password"
          />
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>
      </form>

      <% if (flash_message != "") { %>
      <div
        class="modal fade"
        id="exampleModal"
        tabindex="-1"
        aria-labelledby="exampleModalLabel"
        aria-hidden="true"
      >
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h1 class="modal-title fs-5" id="exampleModalLabel">Status</h1>
              <button
                type="button"
                class="btn-close"
                data-bs-dismiss="modal"
                aria-label="Close"
              ></button>
            </div>
            <div class="modal-footer bg-success-subtle justify-content-center">
              <h3><%= flash_message %></h3>
            </div>
          </div>
        </div>
      </div>
      <% } %>
    </section>

    <script
      src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
      integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js"
      integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy"
      crossorigin="anonymous"
    ></script>

    <script>
      const modal = document.addEventListener("DOMContentLoaded", (e) => {
        const myModal = new bootstrap.Modal(
          document.querySelector("#exampleModal")
        );
        myModal.show();
      });
    </script>
  </body>
</html>
