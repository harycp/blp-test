<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Books Data</title>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
  </head>
  <body class="container">
    <div class="row">
      <div class="col">
        <h1><%= genre %> Books Data</h1>

        <% if(genre !== "All"){ %>
        <a class="btn btn-outline-success" href="/books">All Data</a>
        <% } %>
      </div>
      <div class="col text-end mt-2 me-4">
        <a href="/books/create"
          ><button class="btn btn-outline-success">Create Data</button></a
        >
      </div>
    </div>

    <table class="table">
      <thead>
        <tr>
          <th scope="col">Title</th>
          <th scope="col">Author</th>
          <th scope="col">Details</th>
        </tr>
      </thead>

      <tbody>
        <% for(let i = 0; i < books.length; i++){ %>
        <tr>
          <td><%= books[i].title %></td>
          <td><%= books[i].author %></td>
          <td class="text-center d-flex">
            <a href="/books/<%= books[i]._id %>">
              <i class="fa fa-edit" style="font-size: 24px; color: black"></i
            ></a>
            <form
              action="/books/<%= books[i]._id %>?_method=DELETE"
              method="post"
            >
              <button class="border-0 bg-transparent" type="submit">
                <i class="fa fa-trash-o" style="font-size: 24px"></i>
              </button>
            </form>
          </td>
          <td></td>
        </tr>
        <% } %>
      </tbody>
    </table>

    <div class="row">
      <div class="col">
        <h3>Total Buku : <%= books.length %></h3>
      </div>
      <div class="col text-end">
        <button class="btn btn-primary">
          <a href="/logout" class="btn btn-primary">Logout</a>
        </button>
      </div>
    </div>

    <% if (flash_message != "") { %>
    <div
      class="modal fade"
      id="exampleModal"
      tabindex="-1"
      aria-labelledby="exampleModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h1 class="modal-title fs-5" id="exampleModalLabel">Status</h1>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
              aria-label="Close"
            ></button>
          </div>
          <div class="modal-footer bg-success-subtle justify-content-center">
            <h3><%= flash_message %></h3>
          </div>
        </div>
      </div>
    </div>
    <% } %>

    <script
      src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
      integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js"
      integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy"
      crossorigin="anonymous"
    ></script>

    <script>
      const modal = document.addEventListener("DOMContentLoaded", (e) => {
        const myModal = new bootstrap.Modal(
          document.querySelector("#exampleModal")
        );
        myModal.show();
      });
    </script>
  </body>
</html>
